{
  "name": "@dust/world",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    "./worlds.json": "./worlds.json",
    "./mud.config": "./dist/mud.config.js",
    "./out/*": "./dist/out/*.js",
    "./ts/*": "./dist/ts/*.js"
  },
  "typesVersions": {
    "*": {
      "mud.config": ["./dist/mud.config.d.ts"],
      "ts/*": ["./dist/ts/*.d.ts"],
      "out/*": ["./dist/out/*.d.ts"]
    }
  },
  "files": ["src", "out", "dist", "ts", "worlds.json"],
  "scripts": {
    "build": "pnpm run codegen && pnpm run build:mud && pnpm run build:js",
    "build:js": "tsc",
    "build:mud": "mud build && abi-ts --extension .ts",
    "clean": "forge clean && shx rm -rf src/**/codegen",
    "codegen": "pnpm run codegen:object-type && pnpm run codegen:init-objects && pnpm run codegen:init-recipes && pnpm run codegen:tree-lib && forge fmt",
    "codegen:init-objects": "tsx ./ts/internal/genInitObjectsSol.ts> ./script/initObjects.sol",
    "codegen:init-recipes": "tsx ./ts/internal/genInitRecipesSol.ts > ./script/initRecipes.sol",
    "codegen:object-type": "tsx ./ts/internal/genObjectTypeSol.ts > ./src/ObjectType.sol",
    "codegen:tree-lib": "tsx ./ts/internal/genTreeLibSol.ts > ./src/TreeLib.sol",
    "deploy:local": "pnpm entrykit-deploy && pnpm run build && mud deploy",
    "dev": "pnpm entrykit-deploy && pnpm run build && pnpm mud dev-contracts --rpc http://127.0.0.1:8545",
    "fix": "pnpm run fix:format",
    "fix:format": "forge fmt",
    "fix:lint": "solhint --config ./.solhint.json '**/*.sol' --fix",
    "script:attach-program": "./runForgeScript.bash script/utils/AttachProgramScript.s.sol",
    "script:give": "./runForgeScript.bash script/admin/GiveScript.s.sol",
    "script:teleport": "./runForgeScript.bash script/admin/TeleportScript.s.sol",
    "test": "./runTests.bash"
  },
  "dependencies": {
    "@latticexyz/abi-ts": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "@latticexyz/cli": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "@latticexyz/config": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "@latticexyz/gas-report": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "@latticexyz/schema-type": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "@latticexyz/store": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "@latticexyz/world": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "@latticexyz/world-consumer": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "@latticexyz/world-modules": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "@openzeppelin/contracts": "^4.9.6",
    "solady": "^0.1.12"
  },
  "devDependencies": {
    "forge-std": "https://github.com/foundry-rs/forge-std.git#3b20d60d14b343ee4f908cb8079495c07f5e8981",
    "solhint": "^3.4.1",
    "solhint-config-mud": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "solhint-plugin-mud": "2.2.22-d621dc7c427a59eb74f4d379862646355a149338",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
