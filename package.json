{
  "name": "biomesaw",
  "scripts": {
    "build": "pnpm recursive run build",
    "clean": "pnpm recursive run clean",
    "dev": "mprocs",
    "deploy:local": "pnpm --filter 'world' deploy:local && pnpm --filter 'experience' run deploy",
    "deploy:testnet": "NODE_ENV=testnet pnpm --filter 'world' deploy:testnet && pnpm --filter 'experience' run deploy",
    "deploy:mainnet": "NODE_ENV=mainnet pnpm --filter 'world' deploy:mainnet && pnpm --filter 'experience' run deploy",
    "foundry:up": "curl -L https://foundry.paradigm.xyz | bash && bash $HOME/.foundry/bin/foundryup",
    "mud:up": "pnpm mud set-version --tag main && pnpm install",
    "prepare": "(forge --version || pnpm foundry:up)",
    "test": "pnpm recursive run test"
  },
  "devDependencies": {
    "@latticexyz/cli": "2.2.21-303714d89811a01be2802c32f4f6876fa81e5df9",
    "@latticexyz/explorer": "2.2.21-303714d89811a01be2802c32f4f6876fa81e5df9",
    "@latticexyz/store-indexer": "2.2.21-303714d89811a01be2802c32f4f6876fa81e5df9",
    "@latticexyz/entrykit": "2.2.21-303714d89811a01be2802c32f4f6876fa81e5df9",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "eslint": "8.57.0",
    "mprocs": "^0.7.1",
    "shx": "^0.3.4",
    "typescript": "5.4.2"
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": "18.x || 20.x",
    "pnpm": "^9.6.0"
  }
}
